{
  "name": "testing-npm-lib",
  "version": "0.1.7",
  "author": "alberto benatti",
  "main": ".dist/bin.js",
  "scripts": {
    "build": "esbuild --bundle src/bin.ts --platform=node --outfile=dist/bin.js --packages=external --format=esm",
    "ci": "pnpm run build",
    "release": "pnpm run ci && changeset publish",
    "local-link": "yarn unlink --global | true && pnpm run build && yarn link --global"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@types/node": "^20",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "esbuild": "^0.19.7",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "3.1.0",
    "typescript": "^5.3.2",
    "vitest": "^0.34.6"
  }
}
