{
  "name": "testing-npm-lib",
  "version": "0.1.7",
  "author": "alberto benatti",
  "main": ".dist/index.js",
  "module": ".dist/index.mjs",
  "types": ".dist/index.d.ts",
  "scripts": {
    "format": "pnpm exec prettier . --write",
    "dev": "vitest",
    "test": "vitest run",
    "build": "tsup",
    "lint": "tsc",
    "ci": "pnpm prettier . --check && pnpm run lint && pnpm run test && pnpm run build",
    "release": "pnpm prettier . --check && pnpm run lint && pnpm run test && pnpm run build && changeset tag"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@types/node": "^20",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "3.1.0",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6"
  }
}
